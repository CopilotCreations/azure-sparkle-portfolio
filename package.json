{
  "name": "azure-sparkle-portfolio",
  "version": "1.0.0",
  "description": "A flashy, single-page personal developer portfolio website deployed on Azure Static Web Apps",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src api tests",
    "lint:fix": "eslint src api tests --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "api:build": "tsc -p api/tsconfig.json",
    "swa:start": "swa start dist --api-location api"
  },
  "keywords": [
    "portfolio",
    "azure",
    "static-web-apps",
    "vite",
    "tailwindcss"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^2.1.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.0",
    "vite": "^5.4.21",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "terser": "^5.44.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
